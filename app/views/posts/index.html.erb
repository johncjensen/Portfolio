<table>
<br>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><h1><%= link_to post.title, post_path(post) %></h1></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New Post', new_post_path, :class => "button" %>
