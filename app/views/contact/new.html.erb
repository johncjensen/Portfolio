<%= form_for @message, :url => contact_path do |f| %>
<div class="field">
  <%= f.label :name %>
  <%= f.text_field :name %>
</div>
<div class="field">
  <%= f.label :email %>
  <%= f.text_field :email %>
</div>
<div class="field">
  <%= f.label :subject %>
  <%= f.text_field :subject %>
</div>
<div class="field">
  <%= f.label :body %>
  <%= f.text_area :body %>
</div>
<%= f.submit "Send", class: "btn btn-success" %>
<% end %>
